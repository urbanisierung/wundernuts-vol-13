    "version": "0.2.0",
    "configurations": [


        {
            "command": "pnpm run start",
            "name": "console backend locally",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/apps/console-backend"

        },
        {
            "command": "pnpm run test",
            "name": "accounts backend tests",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/apps/accounts-backend"

        },
        {
            "type": "pwa-node",
            "request": "attach",
            "name": "Attach to Nodemon",
            "processId": "${command:PickProcess}",
            "restart": true
          }
    ]
}